---
import Base from '../../layouts/Base.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<head>
  <title>BoycottWithAI — Strategic tools for non-violent campaigns</title>
  <meta name="description" content="Open tools, templates and a manifesto to organize strategic economic and civil pressure. Resources in multiple languages." />
</head>

<Base>
  <div class="hero">
    <div class="left">
      <h1>{t('hero.title')}</h1>
  <p class="lead">{t('hero.subtitle')}</p>
  <p class="muted" style="margin-top:6px">{t('hero.subtitle2')}</p>
      <div class="cta">
        <a class="button" href={`/${lang}/methodology/`}>{t('nav.methodology')}</a>
        <a class="secondary" href={`/${lang}/get-involved/`}>{t('nav.getinvolved')}</a>
      </div>
    </div>
    <div class="card">
      <h3>Live Alerts</h3>
      <p class="muted">Subscribe to RSS for urgent calls and updates.</p>
      <a class="secondary" href="/rss.xml">Subscribe</a>
    </div>
  </div>

  <section style="margin-top:28px">
    <div class="grid">
      <div class="card">
        <h4>{t('purpose.title')}</h4>
  <p class="muted">{t('purpose.p1')} {t('purpose.p2')} {t('purpose.p3')} {t('purpose.p4')}</p>
      </div>
      <div class="card">
        <h4>Privacy & Safety</h4>
        <p class="muted">Design choices prioritize participant safety and secure reporting: opt-in sharing, ephemeral events, minimal data collection, and anonymity best-practices for reporters.</p>
      </div>
      <div class="card">
        <h4>Community-driven</h4>
        <p class="muted">Everything here is meant to be adapted by local groups — fork the project, contribute datasets, and collaborate on non-violent civic strategies.</p>
      </div>
    </div>
  </section>

  <section style="margin-top:28px">
    <div class="card">
      <h4>{t('issues.title')}</h4>
      <ul>
        <li>{t('issues.core')}</li>
        <li>{t('issues.escalation')}</li>
        <li>{t('issues.humanitarian')}</li>
        <li>{t('issues.institutions')}</li>
      </ul>
    </div>
  </section>
  <section style="margin-top:28px">
    <div class="card">
      <h4>From the Manifesto</h4>
  <p class="muted">{t('manifesto.vision.p1')}</p>
      <div style="margin-top:10px">
        <a class="secondary" href={`/${lang}/manifesto/`}>Read the full manifesto</a>
      </div>
    </div>
  </section>
</Base>
