---
import Base from '../layouts/Base.astro';
import ToolCard from '../components/ToolCard.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<head>
  <title>Tools for Collective Action — BoycottWithAI</title>
  <meta name="description" content="Templates, event planners, and privacy-first coordination tools for non-violent campaigns. Start with a 4-step plan." />
</head>

<Base>
  <section class="hero">
    <div class="left">
      <h1>{t('hero.title')}</h1>
  <p class="lead">{t('hero.subtitle')}</p>
      <div class="cta">
        <a class="button" href={`/${lang}/actions/`}>{t('cta.explore')}</a>
        <a class="secondary" href={`/${lang}/map/`}>Open Map</a>
      </div>
    </div>
    <div class="card" style="width:420px">
  <h3>Quick tools</h3>
  <ul>
  <li><strong>Event Planner</strong> — Plan assemblies that prioritize accessibility, legal observers, and escalation paths.</li>
    <li><strong>Secure Messaging</strong> — Recommendations for encrypted coordination and privacy-preserving communications.</li>
    <li><strong>Contact Templates</strong> — Scripts for outreach to companies, partners, and media to apply coordinated pressure.</li>
  </ul>
      <hr />
  <p class="muted">Use these components to build campaigns that scale responsibly: plan phases, assign roles, and monitor success metrics like participation rate and media reach.</p>
    </div>
  </section>

  <section style="margin-top:28px">
    <div class="grid">
      <div class="card">
        <h4>{t('tools.kits.title')}</h4>
        <p>{t('tools.kits.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('tools.digital.title')}</h4>
        <p>{t('tools.digital.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('tools.training.title')}</h4>
        <p>{t('tools.training.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('tools.ai.monitoring.title')}</h4>
        <p>{t('tools.ai.monitoring.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('tools.visualization.title')}</h4>
        <p>{t('tools.visualization.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('tools.policy.title')}</h4>
        <p>{t('tools.policy.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('tools.divestment.title')}</h4>
        <p>{t('tools.divestment.desc')}</p>
      </div>
      <div class="card">
        <h4>{t('local.targets.title')}</h4>
        <p>{t('local.targets.desc')}</p>
      </div>
    </div>
  </section>
  <section style="margin-top:20px">
    <div class="card">
      <h4>{t('tools.ai.title')}</h4>
      <p class="muted">{t('tools.ai.desc')}</p>
      <ul>
        <li><a href="/templates/ai-prompts-en.txt" target="_blank">AI prompts library (EN)</a></li>
        <li><a href="/templates/ai-prompts-it.txt" target="_blank">AI prompts library (IT)</a></li>
  <li><a href="/templates/briefing-en.txt" target="_blank">One-page briefing template (EN)</a></li>
        <li><a href="/templates/mp-email-en.txt" target="_blank">MP email template (EN)</a></li>
        <li><a href="/templates/petition-en.txt" target="_blank">Petition template (EN)</a></li>
  <li><a href="/templates/ai-prompts-en.txt" target="_blank">AI prompts library (EN)</a></li>
  <li><a href="/templates/monitoring-sample-en.txt" target="_blank">Monitoring script example (EN)</a></li>
      </ul>
    </div>
  </section>
  
  <section style="margin-top:20px">
    <div class="card">
      <h4>{t('osint.title')}</h4>
      <p class="muted">{t('osint.intro')}</p>
      <div class="grid">
        <ToolCard name={t('tools.acled.name')} short={t('tools.acled.short')} why={t('tools.acled.why')} example={t('tools.acled.example')} link="https://acleddata.com" />
        <ToolCard name={t('tools.gdelt.name')} short={t('tools.gdelt.short')} why={t('tools.gdelt.why')} example={t('tools.gdelt.example')} link="https://www.gdeltproject.org" />
        <ToolCard name={t('tools.bellingcat.name')} short={t('tools.bellingcat.short')} why={t('tools.bellingcat.why')} example={t('tools.bellingcat.example')} link="https://www.bellingcat.com" />
        <ToolCard name={t('tools.spiderfoot.name')} short={t('tools.spiderfoot.short')} why={t('tools.spiderfoot.why')} example={t('tools.spiderfoot.example')} link="https://www.spiderfoot.net" />
        <ToolCard name={t('tools.reconng.name')} short={t('tools.reconng.short')} why={t('tools.reconng.why')} example={t('tools.reconng.example')} link="https://github.com/lanmaster53/recon-ng" />
        <ToolCard name={t('tools.theharvester.name')} short={t('tools.theharvester.short')} why={t('tools.theharvester.why')} example={t('tools.theharvester.example')} link="https://github.com/laramies/theHarvester" />
      </div>
    </div>
  </section>
  <section style="margin-top:20px">
    <div class="card">
      <h4>{t('tools.quickstart.title')}</h4>
      <ol>
        <li>{t('tools.quickstart.step1')}</li>
        <li>{t('tools.quickstart.step2')}</li>
        <li>{t('tools.quickstart.step3')}</li>
        <li>{t('tools.quickstart.step4')}</li>
      </ol>
    </div>
  </section>
</Base>
