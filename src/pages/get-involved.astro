---
import Base from '../layouts/Base.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<head>
  <title>{t('getinvolved.title')} â€” BoycottWithAI</title>
  <meta name="description" content={t('getinvolved.subtitle')} />
</head>

<Base>
  <section>
    <h1>{t('getinvolved.title')}</h1>
    <p class="muted">{t('getinvolved.subtitle')}</p>

    <div style="margin-top:18px" class="card">
      <h3>3 Simple steps</h3>
      <ol>
        <li class="muted">Pick a target and define the goal.</li>
        <li class="muted">Use the templates to personalize an ask.</li>
        <li class="muted">Amplify and follow up with representatives.</li>
      </ol>
    </div>

    <div style="margin-top:18px" class="grid">
      <div class="card">
        <h4>Petitions</h4>
        <p class="muted">Download a template, edit it, and share it for signatures.</p>
        <a class="button" href="/templates/petition-en.txt" download>Download</a>
      </div>
      <div class="card">
        <h4>Contact reps</h4>
        <p class="muted">Use our scripts to write a short email to your MP demanding policy changes.</p>
        <a class="button" href="/templates/mp-email-en.txt" download>Get Email</a>
      </div>
      <div class="card">
        <h4>Divestment</h4>
        <p class="muted">Guides to pressure investors and banks funding the arms industry.</p>
        <a class="secondary" href="/resources">Learn more</a>
      </div>
    </div>
  </section>
</Base>
