---
import Base from '../../layouts/Base.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<head>
  <title>BoycottWithAI — Strategische Tools für gewaltfreie Kampagnen</title>
  <meta name="description" content="Offene Tools, Vorlagen und ein Manifest zur Organisation strategischen wirtschaftlichen und zivilen Drucks. Ressourcen in mehreren Sprachen." />
</head>

<Base>
  <div class="hero">
    <div class="left">
      <h1>{t('hero.title')}</h1>
      <p class="lead">{t('hero.subtitle')}</p>
      <p class="muted" style="margin-top:6px">{t('hero.subtitle2')}</p>
      <div class="cta">
        <a class="button" href={`/${lang}/methodology/`}>{t('nav.methodology')}</a>
        <a class="secondary" href={`/${lang}/get-involved/`}>{t('nav.getinvolved')}</a>
      </div>
    </div>
    <div class="card">
      <h3>Live Alerts</h3>
      <p class="muted">Abonnieren Sie den RSS-Feed für dringende Aufrufe und Updates.</p>
      <a class="secondary" href="/rss.xml">Abonnieren</a>
    </div>
  </div>

  <section style="margin-top:28px">
    <div class="grid">
      <div class="card">
        <h4>{t('purpose.title')}</h4>
        <p class="muted">{t('purpose.p1')} {t('purpose.p2')} {t('purpose.p3')} {t('purpose.p4')}</p>
      </div>
      <div class="card">
        <h4>Datenschutz & Sicherheit</h4>
        <p class="muted">Designentscheidungen priorisieren Sicherheit der Teilnehmer und sicheres Reporting: Opt-in-Sharing, flüchtige Events, minimale Datenerfassung und Anonymitäts-Best-Practices für Reporter.</p>
      </div>
      <div class="card">
        <h4>Community-gesteuert</h4>
        <p class="muted">Alles hier ist zur Anpassung durch lokale Gruppen gedacht — forken Sie das Projekt, tragen Sie Datensätze bei und arbeiten Sie an gewaltfreien zivilen Strategien zusammen.</p>
      </div>
    </div>
  </section>

  <section style="margin-top:28px">
    <div class="card">
      <h4>{t('issues.title')}</h4>
      <ul>
        <li>{t('issues.core')}</li>
        <li>{t('issues.escalation')}</li>
        <li>{t('issues.humanitarian')}</li>
        <li>{t('issues.institutions')}</li>
      </ul>
    </div>
  </section>
  <section style="margin-top:28px">
    <div class="card">
      <h4>Aus dem Manifest</h4>
      <p class="muted">{t('manifesto.vision.p1')}</p>
      <div style="margin-top:10px">
        <a class="secondary" href={`/${lang}/manifesto/`}>Lesen Sie das vollständige Manifest</a>
      </div>
    </div>
  </section>
</Base>
